      <div class="board">
        <canvas id="maze" width="560" height="560"></canvas>
      </div>

      <div class="bar" style="margin-top:10px;">
        <div class="stat">çµŒé: <b id="time">00:00.00</b> ï¼ ã‚¹ãƒ†ãƒƒãƒ—: <b id="steps">0</b></div>
        <div class="group">
          <label class="stat">ã‚µã‚¤ã‚º</label>
          <input id="cols" class="num" type="number" min="5" max="51" value="15" />
          <span class="stat">Ã—</span>
          <input id="rows" class="num" type="number" min="5" max="51" value="15" />
          <button id="apply" class="btn">ã‚µã‚¤ã‚ºå¤‰æ›´</button>
          <button id="regen" class="btn">Regenerate</button>
        </div>
